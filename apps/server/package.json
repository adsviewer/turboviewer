{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENCED",
  "description": "AdsViewer Server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development pnpm --filter=@repo/database db:migrate:deploy && tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --conditions=javascript --import=extensionless/register dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist node_modules .turbo",
    "update": "pnpm update --latest",
    "codegen": "graphql-codegen --require dotenv/config --config src/schema/codegen.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.540.0",
    "@graphql-tools/schema": "10.0.3",
    "@graphql-yoga/plugin-disable-introspection": "^2.3.0",
    "@pothos/core": "^3.41.0",
    "@pothos/plugin-errors": "^3.11.1",
    "@pothos/plugin-prisma": "^3.65.0",
    "@pothos/plugin-relay": "^3.46.0",
    "@pothos/plugin-scope-auth": "^3.21.1",
    "@pothos/plugin-simple-objects": "^3.7.0",
    "@pothos/plugin-validation": "^3.10.1",
    "@repo/database": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/utils": "workspace:^",
    "cross-env": "^7.0.3",
    "express": "^4.19.2",
    "extensionless": "^1.9.6",
    "google-auth-library": "^9.7.0",
    "graphql": "^16.8.1",
    "graphql-scalars": "1.23.0",
    "graphql-yoga": "5.3.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "p-queue": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.5",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-generic-sdk": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@graphql-codegen/typescript-react-query": "^6.1.0",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@graphql-codegen/urql-introspection": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.17.43",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.0",
    "@types/node": "20.12.4",
    "dotenv": "^16.4.5",
    "tsx": "^4.7.2",
    "typescript": "5.4.3"
  }
}
