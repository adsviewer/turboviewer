{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "AWS_ACCOUNT_ID",
    "AWS_REGION",
    "AWS_USERNAME",
    "AUTH_SECRET",
    "BACKOFFICE_URL",
    "CHANNEL_SECRET",
    "DATABASE_URL",
    "EMAILABLE_API_KEY",
    "FB_APPLICATION_ID",
    "FB_APPLICATION_SECRET",
    "GRAPHQL_ENDPOINT",
    "GOOGLE_LOGIN_APPLICATION_ID",
    "GOOGLE_LOGIN_APPLICATION_SECRET",
    "GOOGLE_CHANNEL_APPLICATION_ID",
    "GOOGLE_CHANNEL_APPLICATION_SECRET",
    "LINKEDIN_APPLICATION_ID",
    "LINKEDIN_APPLICATION_SECRET",
    "SENTRY_AUTH_TOKEN",
    "TIKTOK_APPLICATION_ID",
    "TIKTOK_APPLICATION_SECRET",
    "TIKTOK_COMPLETE_REPORTS_QUEUE_URL",
    "NEXT_PUBLIC_BACKOFFICE_URL",
    "NEXT_PUBLIC_ENDPOINT",
    "NEXT_PUBLIC_GRAPHQL_ENDPOINT",
    "NEXT_PUBLIC_WEBAPP_ENDPOINT",
    "NEXT_RUNTIME",
    "NEXT_WEBAPP_ENDPOINT",
    "NODE_ENV",
    "PORT",
    "POSTHOG_API_KEY",
    "PUBLIC_URL",
    "REDIS_URL",
    "SKIP_ENV_VALIDATION",
    "SLACK_WEBHOOK_URL_PUBLIC_FEEDBACK"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.*"
      ]
    },
    "lint": {},
    "lint:fix": {},
    "update": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "type-check": {},
    "dev": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.*"
      ],
      "persistent": true,
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
