{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENCED",
  "description": "AdsViewer Server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development pnpm --filter=@repo/database start-dev && tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --conditions=javascript --import=extensionless/register dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist node_modules .turbo",
    "update": "pnpm update --latest",
    "codegen": "tsx --env-file=.env src/schema/codegen.ts",
    "test": "node --import tsx --test test/**/*.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.590.0",
    "@aws-sdk/client-ses": "^3.590.0",
    "@graphql-tools/schema": "10.0.4",
    "@graphql-yoga/plugin-disable-introspection": "^2.3.1",
    "@graphql-yoga/redis-event-target": "^3.0.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@pothos/core": "^3.41.1",
    "@pothos/plugin-errors": "^3.11.1",
    "@pothos/plugin-prisma": "^3.65.2",
    "@pothos/plugin-relay": "^3.46.0",
    "@pothos/plugin-scope-auth": "^3.22.0",
    "@pothos/plugin-simple-objects": "^3.7.0",
    "@pothos/plugin-validation": "^3.10.1",
    "@repo/channel": "workspace:*",
    "@repo/channel-utils": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/lambda-types": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/mappings": "workspace:*",
    "@repo/redis": "workspace:*",
    "@repo/utils": "workspace:*",
    "body-parser": "^1.20.2",
    "change-case": "^5.4.4",
    "cross-env": "^7.0.3",
    "express": "^4.19.2",
    "extensionless": "^1.9.9",
    "google-auth-library": "^9.10.0",
    "graphql": "^16.8.1",
    "graphql-scalars": "1.23.0",
    "graphql-yoga": "5.3.1",
    "jsonwebtoken": "^9.0.2",
    "sns-validator": "^0.3.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.6",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-generic-sdk": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.2.1",
    "@graphql-codegen/typescript-react-query": "^6.1.0",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@graphql-codegen/urql-introspection": "^3.0.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "20.14.2",
    "@types/qs": "^6.9.15",
    "@types/sns-validator": "^0.3.3",
    "tsx": "^4.11.2",
    "typescript": "5.4.5"
  }
}
