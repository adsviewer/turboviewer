{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc",
    "start": "node --conditions=javascript --experimental-specifier-resolution=node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist node_modules .turbo",
    "update": "pnpm update --latest"
  },
  "dependencies": {
    "@graphql-tools/schema": "10.0.3",
    "@graphql-yoga/plugin-disable-introspection": "^2.2.0",
    "@pothos/core": "^3.41.0",
    "@pothos/plugin-errors": "^3.11.1",
    "@pothos/plugin-prisma": "^3.65.0",
    "@pothos/plugin-relay": "^3.46.0",
    "@pothos/plugin-scope-auth": "^3.21.1",
    "@pothos/plugin-simple-objects": "^3.7.0",
    "@pothos/plugin-validation": "^3.10.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "express": "^4.17.21",
    "graphql-scalars": "1.23.0",
    "graphql-yoga": "5.2.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.4",
    "@graphql-codegen/typescript-generic-sdk": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@graphql-codegen/typescript-react-query": "^6.1.0",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.17.43",
    "@types/lodash": "^4.17.0",
    "@types/node": "20.11.30",
    "tsx": "^4.7.1",
    "typescript": "5.4.3"
  }
}
