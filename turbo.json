{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "AWS_REGION",
    "AUTH_SECRET",
    "CHANNEL_SECRET",
    "DATABASE_URL",
    "FB_APPLICATION_ID",
    "FB_APPLICATION_SECRET",
    "NEXT_PUBLIC_GRAPHQL_ENDPOINT",
    "NEXT_PUBLIC_ENDPOINT",
    "PORT",
    "PUBLIC_URL",
    "REDIS_URL"
    ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "update": {
      "cache": false
    },
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
