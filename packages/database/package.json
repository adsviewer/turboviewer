{
  "name": "@repo/database",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "Project Database",
  "main": "./src/client.ts",
  "types": "./src/client.ts",
  "type": "module",
  "exports": {
    "javascript": "./dist/client.js",
    "default": "./src/client.ts"
  },
  "scripts": {
    "build": "tsc",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev --create-only",
    "db:migrate:revert": "npx prisma migrate diff --to-schema-datamodel prisma/schema.prisma --from-schema-datasource prisma/schema.prisma --script > down.sql",
    "db:push": "prisma db push",
    "format": "prisma format",
    "generate": "prisma generate",
    "lint": "eslint . --max-warnings 0",
    "prebuild": "pnpm run generate",
    "predev": "pnpm run generate && pnpm run db:migrate:deploy",
    "studio": "prisma studio",
    "clean": "rm -rf node_modules .turbo",
    "update": "pnpm update --latest && pnpm install"
  },
  "dependencies": {
    "@pothos/plugin-prisma": "^3.65.0",
    "@prisma/client": "^5.11.0",
    "@prisma/extension-read-replicas": "^0.3.0",
    "@repo/logger": "workspace:*",
    "@repo/utils": "workspace:^",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.12.2",
    "prisma": "^5.11.0",
    "prisma-json-types-generator": "^3.0.4",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  }
}
