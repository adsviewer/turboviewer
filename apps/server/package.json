{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENCED",
  "description": "AdsViewer Server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc && pnpm run sentry:sourcemaps",
    "start": "node --conditions=javascript --import=extensionless/register --import ./dist/instrument.js dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "clean": "rm -rf dist node_modules .turbo",
    "update": "pnpm update --latest",
    "codegen": "graphql-codegen -c src/schema/codegen.ts",
    "test": "node --import tsx --test test/**/*.test.ts",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org adsviewer --project server ./dist && sentry-cli sourcemaps upload --org adsviewer --project server ./dist"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.699.0",
    "@envelop/sentry": "^10.0.0",
    "@graphql-tools/schema": "10.0.10",
    "@graphql-yoga/plugin-disable-introspection": "^2.10.4",
    "@paralleldrive/cuid2": "^2.2.2",
    "@pothos/core": "^4.3.0",
    "@pothos/plugin-errors": "^4.2.0",
    "@pothos/plugin-prisma": "^4.4.0",
    "@pothos/plugin-relay": "^4.3.0",
    "@pothos/plugin-scope-auth": "^4.1.1",
    "@pothos/plugin-simple-objects": "^4.1.0",
    "@pothos/plugin-zod": "^4.1.0",
    "@repo/backend-shared": "workspace:*",
    "@repo/channel": "workspace:*",
    "@repo/channel-utils": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/lambda-utils": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/mappings": "workspace:*",
    "@repo/mode": "workspace:*",
    "@repo/pubsub": "workspace:*",
    "@repo/redis": "workspace:*",
    "@repo/utils": "workspace:*",
    "@sentry/node": "^8.41.0",
    "@sentry/profiling-node": "^8.41.0",
    "body-parser": "^1.20.3",
    "change-case": "^5.4.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "extensionless": "^1.9.9",
    "google-auth-library": "^9.15.0",
    "graphql": "^16.9.0",
    "graphql-scalars": "1.24.0",
    "graphql-yoga": "5.10.4",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "prisma-json-types-generator": "^3.1.1",
    "sns-validator": "^0.3.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/client-preset": "^4.5.1",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-generic-sdk": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.4.0",
    "@graphql-codegen/typescript-react-query": "^6.1.0",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@graphql-codegen/urql-introspection": "^3.0.0",
    "@parcel/watcher": "^2.5.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/shared-types": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@sentry/cli": "^2.39.1",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/node": "22.10.1",
    "@types/qs": "^6.9.17",
    "@types/sns-validator": "^0.3.3",
    "tsx": "^4.19.2",
    "typescript": "5.7.2"
  }
}
